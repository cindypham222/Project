@model IEnumerable<Project.Models.Opportunity>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Center)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Center.CenterID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OpportunityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OpportunityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OpportunityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
